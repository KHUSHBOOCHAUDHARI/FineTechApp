<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_layout"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_280sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:cardBackgroundColor="@color/transparent"

            app:cardCornerRadius="@dimen/_28sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_background"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/jackpot_back_image"
                    android:visibility="visible"></ImageView>
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/image_log_back"
                    android:background="@drawable/circular_transparent"

                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"


                    android:visibility="visible">
                    <ImageView
                        android:background="@drawable/circular_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ImageView>

                    <ImageView
                        android:id="@+id/image_log"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"


                        android:layout_centerInParent="true"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/nike"
                        android:visibility="visible"
                        app:tint="@color/black"></ImageView>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/discount_image_tag"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@+id/image_log_back"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/discount_hozontal_tag"
                    android:visibility="visible"></ImageView>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/discount_image_tag"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="On Your Favorite Watches!"
                    android:textAlignment="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"></TextView>


                <ImageView
                    android:id="@+id/image_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginBottom="@dimen/_10sdp"

                    android:visibility="visible"></ImageView>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_backgroundcolor"
        tools:context=".Activity.ShopCreateGoalActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/toolbarlyt"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:id="@+id/back_image"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_alignParentStart="true"

                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/back"
                    app:tint="#6C6C6C"></ImageView>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/txt_createpot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/create_your_pot_txt"
                    android:textColor="#979797"
                    android:textSize="@dimen/_14sdp">

                </TextView>

                <ImageView
                    android:id="@+id/beg_image"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/shope_shope"
                    app:tint="#6C6C6C"></ImageView>
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_below="@+id/toolbarlyt"
                android:layout_height="match_parent"
               >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <RelativeLayout
                        android:id="@+id/product_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_300sdp"

                        android:background="@drawable/squar_border"
                        android:padding="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/product_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/watchone"></ImageView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/product_image_layout"
                        android:background="@drawable/top_two_corna"
                        android:backgroundTint="#111111">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_toStartOf="@+id/count_layout"
                            android:fontFamily="@font/poppins_medium"
                            android:singleLine="true"
                            android:text="SONY 200mm Zoom "
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"></TextView>

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/name"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:singleLine="true"
                            android:text="$6000"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sdp"></TextView>

                        <TextView
                            android:id="@+id/label_bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/price"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Now just stop worrying about Wires hanging from here and there. Pair with any Bluetooth device, connect and play."
                            android:textColor="#484848"
                            android:textSize="@dimen/_8sdp"></TextView>

                        <TextView
                            android:id="@+id/product_detail_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/label_bottom"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:singleLine="true"
                            android:text="Product details"
                            android:textColor="#BABABA"
                            android:textSize="@dimen/_10sdp"></TextView>

                        <LinearLayout
                            android:id="@+id/product_detail_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/product_detail_txt"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/label_bottom"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:singleLine="true"
                                android:text="-45 mm or 41 mm"
                                android:textColor="#484848"
                                android:textSize="@dimen/_8sdp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/label_bottom"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:singleLine="true"
                                android:text="-Swimproof1"
                                android:textColor="#484848"
                                android:textSize="@dimen/_8sdp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/label_bottom"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:singleLine="true"
                                android:text="-Most crack-resistant front crystal"
                                android:textColor="#484848"
                                android:textSize="@dimen/_8sdp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/label_bottom"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:singleLine="true"
                                android:text="-Certified IP6X dust resistant1"
                                android:textColor="#484848"
                                android:textSize="@dimen/_8sdp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/label_bottom"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:singleLine="true"
                                android:text="-Over 50% larger than Series 3"
                                android:textColor="#484848"
                                android:textSize="@dimen/_8sdp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/label_bottom"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:singleLine="true"
                                android:text="-Blood Oxygen app2"
                                android:textColor="#484848"
                                android:textSize="@dimen/_8sdp"></TextView>

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/read_mor"

                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_below="@+id/product_detail_line"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/imagee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/detail_bottom">

                            </ImageView>

                            <ImageView
                                android:id="@+id/fromt_imagee"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:src="@drawable/detail_front_transparent"></ImageView>
                        </RelativeLayout>

                        <RelativeLayout

                            android:id="@+id/btn_layout"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_below="@+id/read_mor"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/create_now_btn"
                                    style="@style/Widget.Neumorph.CardView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    app:neumorph_backgroundColor="@color/black_backgroundcolor"
                                    app:neumorph_shadowColorDark="#80000000"
                                    app:neumorph_shadowColorLight="#1A747474"
                                    app:neumorph_shadowElevation="1dp"
                                    app:neumorph_shapeType="flat">


                                    <RelativeLayout
                                        android:layout_width="match_parent"

                                        android:layout_height="match_parent"
                                        android:background="@drawable/shope_round_corna_min"
                                        android:backgroundTint="#111111">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true">

                                            <ImageView
                                                android:layout_width="@dimen/_30sdp"

                                                android:layout_height="@dimen/_30sdp"
                                                android:layout_centerVertical="true"
                                                android:padding="@dimen/_5sdp"
                                                android:src="@drawable/login_btn"
                                                android:visibility="gone"></ImageView>


                                            <TextView

                                                android:id="@+id/buy_txt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"

                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="@dimen/_10sdp"

                                                android:background="@color/transparent"
                                                android:fontFamily="@font/poppins_bold"
                                                android:paddingTop="10dp"
                                                android:paddingBottom="10dp"
                                                android:text="@string/create_goal_txt"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_14sdp" />
                                        </RelativeLayout>
                                    </RelativeLayout>
                                </soup.neumorphism.NeumorphCardView>

                                <soup.neumorphism.NeumorphCardView
                                    android:id="@+id/buy_now_btn"
                                    style="@style/Widget.Neumorph.CardView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_weight="1"
                                    app:neumorph_backgroundColor="@color/black_backgroundcolor"
                                    app:neumorph_shadowColorDark="#80000000"
                                    app:neumorph_shadowColorLight="#1A747474"
                                    app:neumorph_shadowElevation="1dp"
                                    app:neumorph_shapeType="flat">

                                    <RelativeLayout

                                        android:layout_width="match_parent"

                                        android:layout_height="match_parent"
                                        android:background="@drawable/shope_round_corna_min"
                                        android:backgroundTint="#111111">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true">

                                            <ImageView
                                                android:layout_width="@dimen/_30sdp"

                                                android:layout_height="@dimen/_30sdp"
                                                android:layout_centerVertical="true"
                                                android:padding="@dimen/_5sdp"
                                                android:src="@drawable/login_btn"
                                                android:visibility="gone"></ImageView>


                                            <TextView

                                                android:id="@+id/sell_txt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"

                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="@dimen/_10sdp"

                                                android:background="@color/transparent"
                                                android:fontFamily="@font/poppins_bold"
                                                android:paddingTop="10dp"
                                                android:paddingBottom="10dp"
                                                android:text="@string/buy_now_txt"
                                                android:textColor="@color/white"
                                                android:textSize="@dimen/_14sdp" />
                                        </RelativeLayout>
                                    </RelativeLayout>


                                </soup.neumorphism.NeumorphCardView>

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/count_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/plush_layout"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_10sdp"


                                android:layout_toStartOf="@+id/txt_layout"
                                android:background="@drawable/btn_round_shop">

                                <ImageView
                                    android:id="@+id/plusg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"

                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/plush_shop"></ImageView>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/txt_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_10sdp"

                                android:layout_toStartOf="@id/minush_layout">

                                <TextView
                                    android:id="@+id/item_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="01"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp">

                                </TextView>


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/minush_layout"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:background="@drawable/btn_round_shop">

                                <ImageView
                                    android:id="@+id/minush"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerInParent="true"

                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/minush"></ImageView>


                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
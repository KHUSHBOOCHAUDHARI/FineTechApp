<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDialogContainer"
    android:padding="@dimen/_20sdp"
    android:gravity="center"
    android:background="@color/black_more_transparent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/alert_back"
        android:backgroundTint="@color/black_backgroundcolor">

        <RelativeLayout

            android:layout_marginRight="@dimen/_10sdp"
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular"
            android:backgroundTint="#111111"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp">


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/multi"
               ></ImageView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/logo"
            style="@style/Widget.Neumorph.FloatingActionButton"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:padding="@dimen/_5sdp"
            android:scaleType="centerInside"
            android:src="@drawable/apple"
            app:neumorph_backgroundColor="@color/backgroundcolor"
            app:neumorph_shadowColorDark="#4D009632"
            app:neumorph_shadowColorLight="@color/lightshado_color"

            app:neumorph_shapeType="flat"
            app:tint="@color/white">

        </ImageView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/inter_bold"
            android:text="Apple"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp">

        </TextView>

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:fontFamily="@font/inter_regularr"
            android:text="Upto 50% off and Free shipping"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp">

        </TextView>

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@+id/title_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/poppins_regular"
            android:text="Lorem ipsum dolorem non deserunt ullamco est sit aliqua dolor do amet sint. Velit officia consequat duis enim velit mollit."
            android:textAlignment="center"

            android:textColor="#555555"
            android:textSize="@dimen/_10sdp">

        </TextView>


        <RelativeLayout
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_title"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:background="@drawable/shope_round_corna_min"
            android:backgroundTint="#111111">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/_30sdp"

                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/login_btn"
                    android:visibility="gone"></ImageView>


                <TextView

                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:background="@color/transparent"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Redeem Now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
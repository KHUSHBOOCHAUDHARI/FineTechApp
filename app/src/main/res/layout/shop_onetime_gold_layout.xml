<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/groinvesment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/shope_round_corna_min"
            android:backgroundTint="@color/black"
            android:id="@+id/neuphormic_layout"
            app:neumorph_shadowElevation="@dimen/_5sdp"
            app:neumorph_shapeType="flat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"

                    >

                    <RelativeLayout
                        android:id="@+id/imagelayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <soup.neumorphism.NeumorphFloatingActionButton
                            style="@style/Widget.Neumorph.FloatingActionButton"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:neumorph_backgroundColor="@color/backgroundcolor"
                            app:neumorph_shadowColorDark="@color/transparent"
                            app:neumorph_shadowColorLight="@color/transparent"
                            app:neumorph_shapeType="flat"
                            app:neumorph_strokeColor="@color/backgroundcolor"
                            app:neumorph_strokeWidth="@dimen/_2sdp">


                        </soup.neumorphism.NeumorphFloatingActionButton>

                        <RelativeLayout
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:id="@+id/logo"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/memoji"></ImageView>

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/title_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toStartOf="@+id/plushbutton"
                        android:layout_toLeftOf="@id/kk"
                        android:layout_toEndOf="@+id/imagelayout"
                        android:layout_toRightOf="@+id/plushbutton">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toStartOf="@+id/layout_txt"
                            android:layout_toLeftOf="@+id/pricetxt"
                            android:fontFamily="@font/poppins_medium"
                            android:singleLine="true"
                            android:text="Apple"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp">

                        </TextView>

                        <TextView
                            android:id="@+id/pricetxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_medium"
                            android:singleLine="true"
                            android:text="780.08"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone">

                        </TextView>


                        <TextView
                            android:id="@+id/subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title"
                            android:layout_alignParentStart="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_toLeftOf="@+id/layout_txt"
                            android:fontFamily="@font/poppins_medium"
                            android:singleLine="true"
                            android:text="NSC"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="visible"></TextView>

                        <LinearLayout
                            android:id="@+id/layout_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pricetxt"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">

                            <TextView

                                android:id="@+id/sub_price"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"

                                android:textAlignment="textEnd"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_8sdp"></TextView>

                            <TextView
                                android:id="@+id/discount_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/price"
                                android:layout_toEndOf="@+id/sub_price"
                                android:fontFamily="@font/poppins_medium"

                                android:textColor="@color/green"
                                android:textSize="@dimen/_8sdp"></TextView>
                        </LinearLayout>
                    </RelativeLayout>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/plushbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone"
                        app:neumorph_shapeType="flat">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:padding="@dimen/_5sdp"
                            android:src="@drawable/plush"></ImageView>>
                    </soup.neumorphism.NeumorphCardView>

                    <RelativeLayout
                        android:id="@+id/kk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/plushbutton"
                        android:layout_toRightOf="@+id/title_layout"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/poppins_medium"
                            android:text="780.08"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp">

                        </TextView>


                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>